import Astro from "../assets/astro.svg"
import Skill from "../components/Skill"

const skills=[
    {
        name:"Html", src:Html,
    },
    {
        name:"Css", src:Css,
    },
    {
        name:"React", src:React,
    },
    {
        name:"Sass", src:Sass,
    },
    {
        name:"Typescript", src:Typescript,
    },
    {
        name:"Tailwind", src:Tailwind,
    },
    {
        name:"Knex", src:Knex,
    },
    {
