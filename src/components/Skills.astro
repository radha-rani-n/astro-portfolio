    }
    ,
    {
        name:"Astro", src:Astro,
    }
  
]

---
<section class="max-w-[1280px] mx-auto p-8 flex flex-col items-center justify-center gap-16 my-16">
    <h2 class="text-4xl font-bold">Skills</h2>
    
    <div class="flex gap-4 flex-wrap">
     {skills.map(skill=>( <Skill src={skill.src} skillName={skill.name} client:load/>))}  
       
   </div>
 
  
  
   
</section>